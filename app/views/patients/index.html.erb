<div class="form-group row">
  <div class="col-sm-10">
    <%= form_tag(patients_path, :method => "get", class: "form-inline pull-xs-right", role: 'search') do %>
    <%= text_field_tag :search, nil, :placeholder => "Search", class: 'form-control' %>
    <%= submit_tag 'Search', name: nil, class: "btn btn-success" %>
    <% end %>
  </div>
</div>
<br>

<h1>Patient Records</h1>
<table class="table table-hover table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Fullname</th>
      <th>Birthdate</th>
      <th>Telephone</th>
      <th>Address</th>
      <th>Infection</th>
      <th>Injury</th>
      <th>Observations</th>
      <th>Cost</th>
      <th>Requests</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.fullname %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.telephone %></td>
        <td><%= patient.address %></td>
        <td><%= patient.infection %></td>
        <td><%= patient.injury %></td>
        <td><%= patient.observations %></td>
        <td><%= patient.cost %></td>
        <td><%= patient.requests %></td>
        <td><%= link_to 'View', patient, class: 'btn btn-success align' %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) , class: 'btn btn-primary align' %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Delete', patient, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="form-group row mr-auto">
  <div class="col-sm-10">
    <%= link_to 'Add Patient Record', new_patient_path,  class: 'btn btn-primary align' %>
  </div>
</div>
